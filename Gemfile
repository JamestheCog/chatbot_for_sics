source 'https://www.rubygems.org'

# Stuff required for Sinatra to be Sinatra (taken from their official site):
gem 'sinatra'
gem 'puma'
gem 'rackup'

# Miscellaneous gems for other functionalities:
gem 'dotenv'            # --> Loads in environment variables
gem 'httparty'          # --> For an easier time making HTTP requests
gem 'encryptor'         # --> For encrypting / decrypting purposes
gem 'mailersend-ruby'   # --> For sending out emails.